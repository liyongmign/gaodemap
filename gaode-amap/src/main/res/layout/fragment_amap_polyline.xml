<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mly.lib.amap.fragment.AMapPolylineFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_my_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_my_location"
            tools:ignore="ContentDescription" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_poly_start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_poly_start_button"
                android:textColor="@color/text_radio_button" />

            <RadioButton
                android:id="@+id/rb_poly_end_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/rb_poly_end_button"
                android:textColor="@color/text_radio_button" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
